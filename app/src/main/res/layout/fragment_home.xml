<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/colorBlack">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textAlert"
            android:lines="2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:text="Long press to alert"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pulseAnim1"/>


        <ImageView
            android:id="@+id/pulseAnim2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pulse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pulseAnim1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pulse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert"
            app:backgroundTint="#ff0000"
            app:fabCustomSize="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ask_for_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hospital"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:fabCustomSize="75dp"
            app:layout_constraintEnd_toEndOf="@id/pulseAnim1"
            app:layout_constraintTop_toBottomOf="@id/pulseAnim1"
            />


        <TextView
            android:id="@+id/txt_ask_for_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:visibility="invisible"
            android:src="@drawable/ic_hospital"
            android:text="Ask for help"
            android:textColor="@color/colorWhite"
            android:textSize="25px"
            app:layout_constraintEnd_toEndOf="@id/ask_for_help"
            app:layout_constraintTop_toBottomOf="@id/ask_for_help" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/rumahSakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ambulance2"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:fabCustomSize="75dp"
            app:layout_constraintStart_toEndOf="@id/pulseAnim1"
            app:layout_constraintBottom_toBottomOf="@id/pulseAnim1"/>

        <TextView
            android:id="@+id/txtRumahSakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:visibility="invisible"
            android:src="@drawable/ic_hospital"
            android:text="Call hospital"
            android:textColor="@color/colorWhite"
            android:textSize="25px"
            app:layout_constraintEnd_toEndOf="@id/rumahSakit"
            app:layout_constraintTop_toBottomOf="@id/rumahSakit" />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pemadamKebakaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:src="@mipmap/pemadamkebakaran"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:fabCustomSize="75dp"
            app:layout_constraintStart_toStartOf="@id/pulseAnim1"
            app:layout_constraintTop_toBottomOf="@id/pulseAnim1"/>


        <TextView
            android:id="@+id/txtPemadam"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:src="@drawable/ic_hospital"
            android:text="Call pemadam"
            android:textColor="@color/colorWhite"
            android:textSize="25px"
            app:layout_constraintEnd_toEndOf="@id/pemadamKebakaran"
            app:layout_constraintTop_toBottomOf="@id/pemadamKebakaran" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/polisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/policecar"
            android:visibility="invisible"
            app:backgroundTint="#ffffff"
            app:fabCustomSize="75dp"
            app:layout_constraintBottom_toBottomOf="@id/pulseAnim1"
            app:layout_constraintEnd_toStartOf="@id/pulseAnim1"/>


        <TextView
            android:id="@+id/txtPolisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:src="@drawable/ic_hospital"
            android:text="Call polisi"
            android:textColor="@color/colorWhite"
            android:textSize="25px"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/polisi"
            app:layout_constraintTop_toBottomOf="@id/polisi" />

        <Button
            android:id="@+id/safeBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"
            android:background="@drawable/btn_rounded"
            android:text="I'm safe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pulseAnim1"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtDanger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Your family and people arround you \n will see your request for help"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pulseAnim1"
            app:layout_constraintVertical_bias="0.246" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>